.main_chat
  .chat_header
    .chat_header__top
      .chat_header__top--title
        = @group.name
      .chat_header__top--member
        - @group.users.each do|user|
          = user[:name]
    .chat_header__btn
      =link_to edit_group_path(@group),class:"chat_header__btn--icon"do
        Edit
  
  .chat_contents
    = render @messages

.form
  = form_for [@group, @message] do |f|
    .form__btn
      = f.text_field :content, class: 'form__btn--message', placeholder: 'type a message'
      = f.label :image, class: 'form__btn--icon' do
        %i.fa.fa-image
        = f.file_field :image, class: 'form__btn--image--heid'
      = f.submit 'Send', class: 'form__btn--submit'