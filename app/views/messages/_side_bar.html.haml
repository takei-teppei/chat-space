.side_bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__logo
      %li.list
        =link_to new_group_path, class: 'list__icon' do
          %i.fa.fa-edit
      %li.list
        =link_to edit_user_path(current_user), class: 'list__icon' do
          %i.fa.fa-cog
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#',class:"group__btn"do
          .group__name
            = group.name
          .group__message
