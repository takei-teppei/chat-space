  .header
    .header__name
      = current_user.name
    .header__logo
      =link_to new_group_path, class: 'header__logo--icon' do
        %i.fa.fa-edit
      =link_to edit_user_path(current_user), class: 'header__logo--icon' do
        %i.fa.fa-cog
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#',class:"group__btn"do
          .group__name
            = group.name
